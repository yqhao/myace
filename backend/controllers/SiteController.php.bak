    /**
     * 管理员登录欢迎页
     *
     * @return string
     */
    public function actionIndex()
    {
//        $command = new QueueTestCommand();
//        Yii::$app->commandBusQueued->handle($command);

        $this->layout = false;
        // 获取用户导航栏信息
        $menus = Menu::getUserMenus(Yii::$app->user->id);
