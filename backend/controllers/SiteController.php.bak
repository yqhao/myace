        ]);
    }

    /**
     * 后台管理员登录
     *
     * @return string|\yii\web\Response
     */
    public function actionLogin()
    {
        var_dump(Yii::$app->dbSet);
        $this->layout = 'login.php';
        if (!Yii::$app->user->isGuest) {
            return $this->goHome();
        }

        if(Yii::$app->request->isPost){
            $post = Yii::$app->request->post('AdminForm');
            $dsn = Dsn::getByCode($post['merchantCode']);
            if (empty($dsn)) {
                throw new Exception('dsn could not be empty.');
            }
            Dsn::setComponentDb($dsn);
        }
        $model = new AdminForm();
        if ($model->load(Yii::$app->request->post()) && $model->login()) {
            // 生成缓存导航栏文件
            Menu::setNavigation(Yii::$app->user->id);
            // todo 生成cookie保存mid

            return $this->redirect(['site/index', 'mc' => $model->merchantCode]);
            //return $this->goBack(); // 到首页去
        } else {
            return $this->render('login', [
                'model' => $model,
            ]);
        }
    }

    /**
     * 后台管理员退出
     *
     * @return \yii\web\Response
     */
    public function actionLogout()
    {
        // 用户退出修改登录时间
        $admin = Admin::findOne(Yii::$app->user->id);
        if ($admin) {
            $admin->last_time = time();
            $admin->last_ip = Helper::getIpAddress();
            $admin->save();
        }

        Yii::$app->cache->delete(Menu::CACHE_KEY.Yii::$app->user->id);
        Yii::$app->user->logout();
        return $this->goHome();
    }
